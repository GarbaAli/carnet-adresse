@model AccountLoginViewModel

@{ 
    ViewBag.Title = "Login";
}

<div class="container">
    <h2 class="text-center"> Login Form </h2>
    <div class="row">
        <div class="col-sm-3">

        </div>
        <div class="col-sm-6">
            <form  method="post">
                <div class="form-row">
                </div>
                <div class="form-row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Email"></label>
                        <input class="form-control" asp-for="Email">
                        <span class="small text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Password"></label>
                        <input class="form-control" asp-for="Password">
                        <span class="small text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Remember"></label>
                        <input class="custom-checkbox" asp-for="Remember"></">
                        <span class="small text-danger" asp-validation-for="Remember"></span>
                    </div>

                </div>

                <button class="btn btn-primary" type="submit">Login</button>
                <div class="text text-danger" asp-validation-summary="All"></div>
            </form>
        </div>
        <div class="col-sm-3">

        </div>
    </div>
</div>