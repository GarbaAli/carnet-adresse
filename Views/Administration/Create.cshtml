@model AdministrationCreateRoleViewModel

@{
    ViewBag.Title = "New Role";
}


<div class="container">
    <h2 class="text-center"> Add Role </h2>
    <div class="row">
        <div class="col-sm-3">

        </div>
        <div class="col-sm-6">
            <form method="post">
                <div class="form-row">
                </div>
                <div class="form-row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="RoleName"></label>
                        <input class="form-control" asp-for="RoleName">
                        <span class="small text-danger" hidden asp-validation-for="RoleName"></span>
                    </div>
                </div>

                <button class="btn btn-info" type="submit">Create Role</button>
                <a asp-controller="Administration" asp-action="List" class="btn btn-danger">cancel</a>
                <div class="text text-danger" asp-validation-summary="All"></div>
            </form>
        </div>
        <div class="col-sm-3">

        </div>
    </div>
</div>