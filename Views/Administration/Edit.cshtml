@model AdministrationEditRoleViewModel

@{
    ViewBag.Title = "Update Role";
  }

<div class="container">
    <h2 class="text-center"> Update Role </h2>
    <div class="row">
        <div class="col-sm-3">

        </div>
        <div class="col-sm-6">
            <form method="post">
                <div class="form-row">
                </div>
                <div class="form-row">
                    <div class="col-md-12 mb-3">
                        <input disabled class="form-control" asp-for="Id ">
                        <span class="small text-danger" hidden asp-validation-for="RoleName"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="RoleName"></label>
                        <input class="form-control" asp-for="RoleName">
                        <span class="small text-danger" hidden asp-validation-for="RoleName"></span>
                    </div>
                </div>

                <button class="btn btn-dark" type="submit">Update Role</button>
                <a asp-controller="Administration" asp-action="List" class="btn btn-danger">cancel</a>
                <div class="text text-danger" asp-validation-summary="All"></div>
            </form>
            <hr />
            @if (Model.Users.Count == 0)
            {
                <div class="alert alert-dark">
                    <p>No Users</p>
                </div>
                <div class="card-body">
                    <a asp-controller="Administration" asp-action="AddRemoveUserRole" asp-route-RoleId="@Model.Id" class="btn-sm btn-dark">Add or Remove User</a>
                    <a asp-controller="Contact" asp-action="Index" class="btn-sm btn-danger">Back To List</a>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">All Users</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach (string userEmail in Model.Users)
                        {
                            <li class="list-group-item">@userEmail</li>
                        }
                    </ul>
                    <div class="card-body">
                        <a asp-controller="Administration" asp-action="AddRemoveUserRole" asp-route-RoleId="@Model.Id" class="btn-sm btn-dark">Add or Remove User</a>
                        <a asp-controller="Contact" asp-action="Index" class="btn-sm btn-danger">Back To List</a>
                    </div>
                </div>
            }

        </div>
        <div class="col-sm-3">

        </div>
    </div>
</div>